			<class name="lambdaTestcase.Zodiac_Desktop" />
		</classes>
	</test>

	<!-- Test 3: Desktop Firefox -->
	<test name="Zodiac Test on Desktop Firefox">
		<parameter name="browserName" value="Firefox" />
		<parameter name="os" value="Windows" />
		<classes>
			<class name="lambdaTestcase.Zodiac_Desktop" />
		</classes>
	</test>

	<!-- Test 4: Desktop Mac Safari Ventura -->
	<test name="Zodiac Test on Desktop Mac Safari Ventura">
		<parameter name="browserName" value="Safari" />
		<parameter name="os" value="macOS Ventura" />
